@model Product

	<div class="col-lg-4 col-md-6 text-center">
		<div class="single-product-item">
			<div class="product-image">
				<a asp-action="Detail"><img src="~/assets/img/products/@Model.Image" alt="@Model.Name"></a>
			</div>
			<h3>@Model.Name</h3>
			<p class="product-price"><span>@Model.KiloGram</span> @(Model.Price)$ </p>
			<a asp-controller="Cart" asp-action="Index" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
		</div>
	</div>


